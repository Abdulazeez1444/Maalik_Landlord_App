{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".", // Sets the root directory for resolving aliases
    "paths": {
      "@/*": ["*"], // Maps `@/` to the root directory
      "@/components/*": ["components/*"] // Maps `@/components/` to the `components/` folder
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}